<AnchorLayoutExample>:
	#right, left, center / bottom, top, center
	anchor_x: "center"
	anchor_y: "top"
	BoxLayout:
		size_hint: .2, .2
		Button:
			text: "A"
		Button:
			text: "B"


<BoxLayoutExample>:
	orientation: "horizontal"
	Button:
		text: "A"
		#size: "20dp", "40dp"
		height: "60dp"
		size_hint: 1, None
		# x, center_x, right
		# y, center_y, top
		pos_hint: {"x": .3}
	BoxLayout:
		orientation: "vertical"
		spacing: "10dp"
		Button:
			text: "B1"
		Button:
			text: "B2"		
		Button:
			text: "B3"		
		Button:
			text: "B4"
	Label:
		text: "C"

